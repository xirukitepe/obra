.container-fluid
  = render "slider"
  WHAT'S HOT
  %br/
  %br/
  .slider1
    - @hots.each do |hot|
      .slide
        = link_to comic_path(hot) do
          %img{src: hot.comic_chapters.first.comic_images.where(cover_photo: true).first.try(:comic)}/
    .slide= "No Comics Found" if @hots.empty?
