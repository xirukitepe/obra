
<div id="signup-form">

    <h3>Sign Up</h3>

    <fieldset>

    	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

 
  <%= f.email_field :email, autofocus: true, placeholder:"Email" %>
  <%= f.password_field :password, autocomplete: "off", placeholder:"Password" %>
  <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Confirm Password" %>
  <%= f.text_field :birthday, placeholder:"Birthday" %>
  <%= f.text_field :username, placeholder:"Username" %>
  <%= f.text_field :firstname, placeholder:"First Name" %>
  <%= f.text_field :lastname, placeholder:"Last Name" %>
  <%= f.text_field :contact_no, placeholder:"Contact Number" %>
  <%= f.text_area :description, placeholder:"Describe yourself" %>
   
	<footer class="clearfix">
		Already Registered? 
		<%= render "devise/shared/links" %>

    </footer>

   <div><%= f.submit "Sign Up" %></div>
<% end %>

    </fieldset>

</div> 
